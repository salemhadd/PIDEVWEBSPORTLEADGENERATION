{% extends 'base.html.twig' %}

{% block title %}Nouvelle Expérience{% endblock %}

{% block body %}
<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">

                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Créer une Nouvelle Expérience</h1>
                        </div>
                        {% if app.user %}
                        {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}



                        <form class="user">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_label(form.titre) }}
                                    {{ form_widget(form.titre,{'attr':{'class': 'form-control form-control-user'}}) }}
                                    {{ form_errors(form.titre) }}
                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    {{ form_label(form.contenus, 'Contenus') }}
                                    {{ form_widget(form.contenus,{'attr':{'class': 'form-control form-control-user'}}) }}
                                    {{ form_errors(form.contenus) }}
                                </div>
                            </div>








        <button type ="submit" class ="btn btn-success">Avis ! </button>
        <a href="{{ path('experience_indexfront') }}" class="btn btn-primary"> Consulter La liste des Expériences </a>

        {{ form_end(form) }}

    {% else  %}
        <h2> Vous ne pouvez pas donner votre expérience si vous n'etes as connecté ! </h2>
        <a href="{{ path('security_login') }}" class="btn btn-primary">



            Connexion

        </a>
    {% endif %}
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


{% endblock %}




