{% extends 'base2.html.twig' %}

{% block title %}Edit TypeActivite{% endblock %}

{% block body %}


    {#{{ include('type_activite/_form.html.twig', {'button_label': 'Update'}) }}#}
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">

                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Modifier un type activité</h1>
                            </div>
                            {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}



                            <form class="user">
                                <div class="form-group row">

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.type) }}
                                        {{ form_widget(form.type,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.type) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.color) }}
                                        {{ form_widget(form.color,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.color) }}
                                    </div>
                                </div>
                                <button class="btn btn-primary">{{ button_label|default('modifier') }}</button>
                                {{ form_end(form) }}
                                <a class="btn btn-light" href="{{ path('type_activite_index') }}">Retour à la liste</a>
                            </form>
                            {{ include('type_activite/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


{% endblock %}
