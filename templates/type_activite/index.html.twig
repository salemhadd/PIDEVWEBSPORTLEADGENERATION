{% extends 'base2.html.twig' %}

{% block title %}TypeActivite index{% endblock %}

{% block body %}
<div class="container">
    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">table type d'activit√©s</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Type</th>
                            <th>Couleur</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for type_activite in type_activites %}
                        <tr>
                            <td>{{ type_activite.id }}</td>
                            <td>{{ type_activite.type }}</td>
                            <td>{{ type_activite.color }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('type_activite_show', {'id': type_activite.id}) }}">Afficher</a>
                                <a class="btn btn-warning" href="{{ path('type_activite_edit', {'id': type_activite.id}) }}">Modifier</a>

                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                 <a class="btn btn-success" href="{{ path('type_activite_new') }}">Ajouter un nouveau type</a>
                <a class="btn btn-outline-dark" href="{{ path('teststatstypeact') }}">Stats</a>
            </div>
        </div>
    </div>
</div>

{% endblock %}
