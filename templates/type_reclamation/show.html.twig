{% extends 'base2.html.twig' %}

{% block title %}TypeReclamation{% endblock %}

{% block body %}
<div class="container">
    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Type Réclamation</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ type_reclamation.id }}</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>{{ type_reclamation.type }}</td>
                        </tr>
                        <tr>
                            <th>Couleur</th>
                            <td>{{ type_reclamation.color }}</td>
                        </tr>
                    </tbody>
                </table>

                <a class="btn btn-info" href="{{ path('type_reclamation_index') }}">Retour à la liste</a>

                <a class="btn btn-warning" href="{{ path('type_reclamation_edit', {'id': type_reclamation.id}) }}">Modifier</a>

                {{ include('type_reclamation/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
