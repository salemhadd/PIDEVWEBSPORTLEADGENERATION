{% extends 'base2.html.twig' %}

{% block title %}Reclamation{% endblock %}

{% block body %}
<div class="container">
    <div class="card shadow mb-4">

        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Activité</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reclamation.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ reclamation.contenu }}</td>
            </tr>
            <tr>
                <th>Daterec</th>
                <td>{{ reclamation.daterec ? reclamation.daterec|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ reclamation.user }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ reclamation.type }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ reclamation.etat }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('reclamation_index') }}">Retour à la liste</a>

    <a class="btn btn-warning" href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">Modifier</a>

    {{ include('reclamation/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
