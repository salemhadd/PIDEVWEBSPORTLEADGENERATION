{% extends 'base2.html.twig' %}

{% block title %}New Reclamation{% endblock %}

{% block body %}


    {#{{ include('reclamation/_form.html.twig') }}#}
    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">

                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Ajouter une réclamation</h1>
                            </div>
                            {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}



                            <form class="user">
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.contenu) }}
                                        {{ form_widget(form.contenu,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.contenu) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.daterec, 'date de réclamation') }}
                                        {{ form_widget(form.daterec,{'attr':{'class': 'form-control input-inline datetimepicker'}}) }}
                                        {{ form_errors(form.daterec) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.user) }}
                                        {{ form_widget(form.user,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.user) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.type) }}
                                        {{ form_widget(form.type,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.type) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.etat) }}
                                        {{ form_widget(form.etat,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.etat) }}
                                    </div>




                                </div>
                                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
                                {{ form_end(form) }}
                                <a class="btn btn-light" href="{{ path('reclamation_index') }}">back to list</a>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

