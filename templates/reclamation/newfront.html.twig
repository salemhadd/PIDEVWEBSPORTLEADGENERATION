<div class="cta-sub no-color">
    <div class="container">
        <div class="cta-inner">
            <div class="text-center">
                <h1 class="request_text">Ajouter une réclamation</h1>
            </div>
                <div class="form-row">
                    {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}
                    <div class="form-group col-md-6">
                        {{ form_label(form.contenu) }}
                        {{ form_widget(form.contenu,{'attr':{'class': 'form-control '}}) }}
                        {{ form_errors(form.contenu) }}
                    </div>
                    <div class="form-group col-md-6">
                        {{ form_label(form.daterec, 'date de réclamation') }}
                        {{ form_widget(form.daterec,{'attr':{'class': 'form-control '}}) }}
                        {{ form_errors(form.daterec) }}
                    </div>
                </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    {{ form_label(form.user) }}
                    {{ form_widget(form.user,{'attr':{'class': 'form-control '}}) }}
                    {{ form_errors(form.user) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(form.type) }}
                    {{ form_widget(form.type,{'attr':{'class': 'form-control '}}) }}
                    {{ form_errors(form.type) }}
                </div>
                <div class="form-group col-md-4">
                    {{ form_label(form.etat) }}
                    {{ form_widget(form.etat,{'attr':{'class': 'form-control form-control-user'}}) }}
                    {{ form_errors(form.etat) }}
                </div>
            </div>
            <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>


