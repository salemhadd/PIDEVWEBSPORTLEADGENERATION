{% extends 'base.html.twig' %}

{% block title %}Activite{% endblock %}

{% block body %}
    <div class="container">
        <div class="card shadow mb-4">

            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Activité</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">

                    <table class="table table-bordered">
                        <tbody>
                        <tr>
                            <th>Nom</th>
                            <td>{{ activite.nom }}</td>
                        </tr>
                        <tr>
                            <th>Duree</th>
                            <td>{{ activite.duree }}</td>
                        </tr>
                        <tr>
                            <th>Type</th>
                            <td>{{ activite.type }}</td>
                        </tr>
                        </tbody>
                    </table>

                    <a class="btn btn-info" href="{{ path('liste_activites') }}">Retour à la liste</a>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
