{% extends 'base.html.twig' %}

{% block title %}Modifier votre Profil{% endblock %}

{% block body %}


    {#{{ include('type_reclamation/_form.html.twig', {'button_label': 'Update'}) }}#}




    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">

                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Modifier Votre Profil</h1>
                            </div>
                            {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}



                            <form class="user">
                                <div class="form-group row">

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.username) }}
                                        {{ form_widget(form.username,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.username) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.lastname) }}
                                        {{ form_widget(form.lastname,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.lastname) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.firstname) }}
                                        {{ form_widget(form.firstname,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.firstname) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.pays) }}
                                        {{ form_widget(form.pays,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.pays) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.image) }}
                                        {{ form_widget(form.image,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.image) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.email) }}
                                        {{ form_widget(form.email,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.email) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.password) }}
                                        {{ form_widget(form.password,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.password) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.confirm_password) }}
                                        {{ form_widget(form.confirm_password,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.confirm_password) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.birthday) }}
                                        {{ form_widget(form.birthday,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.birthday) }}
                                    </div>

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.phone) }}
                                        {{ form_widget(form.phone,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.phone) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.adress) }}
                                        {{ form_widget(form.adress,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.adress) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.gender) }}
                                        {{ form_widget(form.gender,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.gender) }}
                                    </div>

                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.validation) }}
                                        {{ form_widget(form.validation,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.validation) }}
                                    </div>
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_label(form.idcode) }}
                                        {{ form_widget(form.idcode,{'attr':{'class': 'form-control form-control-user'}}) }}
                                        {{ form_errors(form.idcode) }}
                                    </div>
                                </div>
                                <button class="btn btn-primary">{{ button_label|default('modifier') }}</button>
                                {{ form_end(form) }}
                               {#  <a class="btn btn-light" href="{{ path('type_reclamation_index') }}">Retour Ã  la liste</a>#}
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}





