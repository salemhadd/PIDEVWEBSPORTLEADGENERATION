{% extends 'base2.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ app.user.username }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ app.user.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ app.user.firstname }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ app.user.image }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ app.user.password }}</td>
            </tr>

            <tr>
                <th>Birthday</th>
                <td>{{ app.user.birthday }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ app.user.phone }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ app.user.pays }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ app.user.adress }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ app.user.gender }}</td>
            </tr>

            <tr>
                <th>Validation</th>
                <td>{{ app.user.validation }}</td>
            </tr>
            <tr>
                <th>Idocde</th>
                <td>{{ app.user.idcode }}</td>
            </tr>

        </tbody>
    </table>

    <a class="btn btn-secondary btn-icon-split" href="{{ path('user_index') }}">Retourner</a>
    <a class="btn btn-success btn-icon-split" href="{{ path('user_edit', {'id': app.user.id}) }}">Modifier</a>

{% endblock %}
