{% extends 'base.html.twig' %}

{%  block body %}

 <div class="cta-sub no-color">
 <div class="container">
 <div class="cta-inner">
  <div class="text-center">
   <h1 class="request_text">Inscrivez-vous</h1>
  </div>
  <div class="form-row">
   {{ form_start(form,{'attr':{'novalidate': 'novalidate'}}) }}
   <div class="form-group col-md-6">
    {{ form_label(form.username) }}
    {{ form_widget(form.username,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.username) }}
   </div>
  </div>
  <div class="form-row">
   <div class="form-group col-md-6">
    {{ form_label(form.lastname) }}
    {{ form_widget(form.lastname,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.lastname) }}
   </div>
    <div class="form-group col-md-6">
     {{ form_label(form.pays) }}
     {{ form_widget(form.pays,{'attr':{'class': 'form-control '}}) }}
     {{ form_errors(form.pays) }}
    </div>
   <div class="form-group col-md-6">
    {{ form_label(form.firstname) }}
    {{ form_widget(form.firstname,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.firstname) }}

  </div>

   <div class="form-group col-md-6">
    {{ form_label(form.image) }}
    {{ form_widget(form.image,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.image) }}
   </div>
   <div class="form-group col-md-6">
    {{ form_label(form.email) }}
    {{ form_widget(form.email,{'attr':{'class': 'form-control form-control-user'}}) }}
    {{ form_errors(form.email) }}
   </div>


   <div class="form-group col-md-6">
    {{ form_label(form.password) }}
    {{ form_widget(form.password,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.password) }}
   </div>
   <div class="form-group col-md-6">
    {{ form_label(form.confirm_password) }}
    {{ form_widget(form.confirm_password,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.confirm_password) }}
   </div>
   <div class="form-group col-md-6">
    {{ form_label(form.birthday) }}
    {{ form_widget(form.birthday,{'attr':{'class': 'form-control form-control-user'}}) }}
    {{ form_errors(form.birthday) }}
   </div>



   <div class="form-group col-md-6">
    {{ form_label(form.phone) }}
    {{ form_widget(form.phone,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.phone) }}
   </div>

   <div class="form-group col-md-6">
    {{ form_label(form.adress) }}
    {{ form_widget(form.adress,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.adress) }}
   </div>
   <div class="form-group col-md-6">
    {{ form_label(form.gender) }}
    {{ form_widget(form.gender,{'attr':{'class': 'form-control form-control-user'}}) }}
    {{ form_errors(form.gender) }}
   </div>


   <div class="form-group col-md-6">
    {{ form_label(form.validation) }}
    {{ form_widget(form.validation,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.validation) }}
   </div>
   <div class="form-group col-md-6">
    {{ form_label(form.idcode) }}
    {{ form_widget(form.idcode,{'attr':{'class': 'form-control '}}) }}
    {{ form_errors(form.idcode) }}
   </div>
  </div>


<button type="submit" class="btn btn-success">Inscription</button>
  {{ form_end(form) }}
 </div>
 </div>
 </div>
{% endblock %}