{% extends'base.html.twig' %}
{% block body %}
    <h1>Connexion ! </h1>
    <form action="{{ path('security_login') }}" method="post">
        <div class="form-group">
            <input placeholder="Adresse email ..." required name="_username" type="text" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
        </div>


        <div class="form-group">
            <button type="submit" class="btn btn-success"    href="{{path('security_registration')}}">Connexion</button>
        </div>


        <div class="col-md-6">
            <div class="ml-md-3 mt-3 mt-md-0 forgot-pass">
                <a class="btn btn-danger  btn-icon-split"  href="{{path('motdepasseoublie')}}">Mot de passe oublie</a>


                <div class="form-group">
                <p class="mt-1">Don't have account?<a class="btn btn-success  btn-icon-split"  href="{{path('admin')}}">Sign Up here as a Client Premium</a></p>

                </div>
            </div>
        </div>
        </div>
    </form>
{% endblock %}

